<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.izhang.filmfriend">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".View.LoadingView">

        </activity>

        <activity android:name=".View.RegisterView" />

        <activity
            android:name=".View.LoginView"
            android:label="@string/title_activity_login_view">
        </activity>

        <activity
            android:name=".View.HomeView"
            android:label="@string/title_activity_home_view">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".View.MovieDetailView"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".View.GroupDetailView" />

        <activity android:name=".View.SearchResultActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".View.HomeView" />

        </activity>
    </application>

</manifest>